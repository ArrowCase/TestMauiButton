<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TestMauiButton.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <ImageButton
                Source="dotnet_bot.png"
                Pressed="ImageBtn_Pressed"
                Released="ImageBtn_Released"
                BackgroundColor="Blue"
                HeightRequest="100"
                HorizontalOptions="Center" />

            <ImageButton
                Source="dotnet_bot.png"
                BackgroundColor="Red"
                HeightRequest="100"
                HorizontalOptions="Center" />

            <Button
                Text="Button 1"
                Pressed="Btn_Pressed"
                Released="Btn_Released"
                BackgroundColor="Green"
                HeightRequest="100"
                HorizontalOptions="Center" />

            <Button
                Text="Button 2"
                BackgroundColor="Orange"
                HeightRequest="100"
                HorizontalOptions="Center" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
